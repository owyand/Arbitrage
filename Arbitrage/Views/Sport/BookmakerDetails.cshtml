@model OddsModel

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    th {
        background-color: #4CAF50;
        color: white;
    }
</style>



<h1>@Model.AwayTeam vs. @Model.HomeTeam at @Model.CommenceTime</h1>

<table>
    <thead>
        <tr>
            <th>Bookmaker</th>
            <th>Market</th>
            <th>@Model.AwayTeam</th>
            <th>@Model.HomeTeam</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bookmaker in Model.Bookmakers)
        {
            foreach (var market in bookmaker.Markets)
            {
                <tr>
                    @if (market == bookmaker.Markets.First())
                    {
                        <td rowspan="@bookmaker.Markets.Count()">@bookmaker.Title</td>
                        <td rowspan="@bookmaker.Markets.FirstOrDefault().Outcomes.Count()">@market.Key</td>
                    }
                    
                    @foreach(var outcome in market.Outcomes)
                    {
                        <td>@outcome.Name</td>
                        <td>@outcome.Price</td>

                        if(outcome.Point != null)
                        {
                            <td>@outcome.Point</td>
                        }
                        else
                        {
                            <td></td>
                        }
                    }
                </tr>
            }
        }
    </tbody>
</table>


